# Maintainer: Timo Ter√§s <timo.teras@iki.fi>
pkgname=rameplayer-utils
pkgver=0.5.0
pkgrel=0
pkgdesc="Rameplayer Backend"
url="https://github.com/rameplayerorg/rameplayer-utils"
arch="armhf"
license="GPLv2"
depends=""
makedepends="raspberrypi-dev freetype-dev"
install=""
subpackages=""

source="$pkgname-$pkgver.tar.gz::https://github.com/rameplayerorg/rameplayer-utils/archive/v$pkgver.tar.gz
	"
_srcdir="$srcdir"/$pkgname-$pkgver

prepare() {
	:
}

build() {
	cd "$_srcdir"
	cmake . && make
}

package() {
	mkdir -p "$pkgdir"/usr/bin/ "$pkgdir"/usr/share/fonts/TTF/
	install -m755 "$_srcdir"/rametext/rametext "$pkgdir"/usr/bin/
	install -m755 "$_srcdir"/rameclock/rameclock "$pkgdir"/usr/bin/
	install -m755 "$_srcdir"/ramefbcp/ramefbcp "$pkgdir"/usr/bin/
	install -m644 "$_srcdir"/ramefbcp/ramefbcp.ttf "$pkgdir"/usr/share/fonts/TTF/
}

md5sums="310b0dd08151847cd47e1005bbdbee4d  rameplayer-utils-0.5.0.tar.gz"
sha256sums="e070a11caca651f09900631e982a773e70f4965c928714643e002dde49da7719  rameplayer-utils-0.5.0.tar.gz"
