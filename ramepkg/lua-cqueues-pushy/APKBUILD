# Maintainer: Timo Ter√§s <timo.teras@iki.fi>
_luaversions="5.2 5.3"
pkgname=lua-cqueues-pushy
pkgver=0.20160525
_commitid=3f76899f0879c7109a99cf9959e6a066db2921e7
pkgrel=0
pkgdesc="Framework for logic control (based on cqueues)"
url="https://github.com/rameplayerorg/lua-cqueues-pushy"
arch="all"
license="GPLv2"
install=""
depends=""
makedepends=""
subpackages=""
for _i in $_luaversions; do
        makedepends="$makedepends lua$_i-dev"
        subpackages="$subpackages lua$_i-cqueues-pushy:split_${_i/./_}"
done
source="$pkgname-$pkgver.tar.gz::https://github.com/rameplayerorg/$pkgname/archive/$_commitid.tar.gz
	cqpushy.initd
	"

_sdir="$srcdir"/$pkgname-$_commitid

prepare() {
	local i
	cd "$_srcdir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
	for _v in $_luaversions; do
		cp -r "$_sdir" "$srcdir"/build-$_v
	done
}

build() {
	for _v in $_luaversions; do
		cd "$srcdir"/build-$_v
		make LUA_VERSION=$_v
	done
}

package() {
	for _v in $_luaversions; do
		cd "$srcdir"/build-$_v
		make LUA_VERSION=$_v install DESTDIR="$pkgdir" || return 1
	done
	install -m755 -D "$srcdir"/cqpushy.initd \
		"$pkgdir"/etc/init.d/cqpushy || return 1
}

_split() {
	local _ver=$1
	pkgdesc="$pkgdesc - Lua $_ver"
	depends="lua$_ver-cqueues>=20150616 lua$_ver-struct lua$_ver-posix lua$_ver-ldbus"
	install_if="lua$_ver $pkgname=$pkgver-r$pkgrel"

	mkdir -p "$subpkgdir"/usr/share/lua "$subpkgdir"/usr/lib/lua
	mv "$pkgdir"/usr/share/lua/$_ver "$subpkgdir"/usr/share/lua
	mv "$pkgdir"/usr/lib/lua/$_ver "$subpkgdir"/usr/lib/lua
}

for _i in $_luaversions; do
	eval "split_${_i/./_}() { _split $_i; }"
done

md5sums="09388667a36dd1c2cc217831d111afb9  lua-cqueues-pushy-0.20160525.tar.gz
f585d5983128ccb9b9d33a6019107158  cqpushy.initd"
sha256sums="05b00b6680a38ca0ce7a665779cf591cef16fbb125fd768d8f457b2326caf0d3  lua-cqueues-pushy-0.20160525.tar.gz
4ebdbd3299c4b18b7224edc202bd9a4d5a97f325a474ec222901dbedf7f3bc58  cqpushy.initd"
sha512sums="b4b8aec0d890418dcfc54d10301c4bed4785a0fcdeec9c59eaaac8e9a4b4ce9a782ac00f82f92dc448f8a89337ceb9721e45c37584d1d620f7259ba8fe1d5a39  lua-cqueues-pushy-0.20160525.tar.gz
